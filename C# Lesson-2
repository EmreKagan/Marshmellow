using System;

namespace Donguler
{
    class Program
    {
        static void Main(string[] args)
        {
            for (int i = 1000; i >= 0; i= i-50)  //Koşulu belirtiken dikkatli olmak zorundasınız!
            {
                Console.WriteLine(i);  //1000den başlayıp 0a kadar 50şer 50şer azaltarak yazdırır.
            }

            for (int i = -100; i <= 100; i= i+20)
            {
                Console.WriteLine(i);  //-100den başlayıp 100e kadar 20şer 20şer artırarak yazdırır.
            }

            //array-dizi
            //Dizilerin avantajı dinamik olmalarıdır ve bu sayede çok elemanlı verilerde veri hakimiyetiniz kolaylaşır.
            string[] Lessons = new string[] { "Im taking C# lesson", "Im taking CSS lessons",
            "Im taking Python lessons", "Im taking HTML lessons",
            "I ll learn AI", "I ll make games"};  // Bir dizi tanımladık.

            for (int i = 0; i < 6; i++) // 0.elemandan başlyıp 6. elemana kadar(6 hariç) yazdıracak bir döngü tasarladık.
            {                               //Lakin eğer yazdığımız diziyle döngüyü bağdaştırmazsak sadece geçerli şartı sağlayan rakamlar yazar.
                Console.WriteLine(Lessons[i]);  //Kullandığımız bu biçim "Lessons" dizisini "i" değeriyle bağdaştırır. Ve istediğimiz şey çıkar.
            }

            //Bir listeyi yukarıdaki gibi değer atamalarıyla yapabilcğimiz gibi aşşağıdaki biçimde de yapabiliriz.
            //Çıktımız yukarıdaki ile aynı olacaktır.
            foreach (string Kurs in Lessons)
            {
                Console.WriteLine(Kurs);
            }
        }
    }
}
