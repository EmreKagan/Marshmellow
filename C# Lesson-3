using System;

namespace Siniflar
{
    class Program
    {
        static void Main(string[] args)
        {
        // Tanımladığımız classlar da dinamiktir. İstediğimiz zaman bloklar ekleyip çıkartabiliriz. Küme gibi düşünün.

            Kurs kurs1 = new Kurs();
            kurs1.KursAd = "C#";
            kurs1.Eğitmen = "Engin Demiroğ";
            kurs1.IzlenmeOranı = 80;

            Kurs kurs2 = new Kurs();
            kurs2.KursAd = "Java";
            kurs2.Eğitmen = "Kerem Varış";
            kurs2.IzlenmeOranı = 64;

            Kurs kurs3 = new Kurs();
            kurs3.KursAd = "Python";
            kurs3.Eğitmen = "Berkay Bilgin";
            kurs3.IzlenmeOranı = 76;

            Kurs[] Kurslar = new Kurs[] {kurs1, kurs2, kurs3};

            foreach (var KursListe in Kurslar)
            {
                Console.WriteLine(KursListe.KursAd + " : " + KursListe.IzlenmeOranı);
            }
        }
    }

    class Kurs //class+tab+tab !!!
    {
        public string KursAd { get; set; } //prop+tab+tab !!!
        public string Eğitmen { get; set; }
        public int IzlenmeOranı { get; set; }
    }
}
